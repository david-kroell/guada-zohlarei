<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_weight="10">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/listViewOverview_item1"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:elevation="2dp"
        card_view:cardUseCompatPadding="true"
        android:background="#fff"
        android:layout_weight="5"
        android:layout_marginRight="8dp">

        <LinearLayout
            android:id="@+id/bill1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewBills1"
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_height="100dp"
                android:background="#555"
                android:src="@drawable/logo_raiffeisen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textViewBillsName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Router"/>

                <TextView
                    android:id="@+id/textViewBillsPrice1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6,99 LIT"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/listViewOverview_item2"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:elevation="2dp"
        card_view:cardUseCompatPadding="true"
        android:background="#fff"
        android:layout_weight="5"
        android:layout_marginLeft="8dp">

        <LinearLayout
            android:id="@+id/bill2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewBills2"
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_height="100dp"
                android:background="#555"
                android:src="@drawable/logo_raiffeisen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textViewBillsName2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Router"/>

                <TextView
                    android:id="@+id/textViewBillsPrice2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6,99 LIT"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>